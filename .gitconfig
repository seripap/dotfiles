[user]
  name = Daniel Seripap
  email = daniel@seripap.com
	signingkey = 7452659E37C126D9
[alias]
  co = checkout
  s = status -sb
  ps = push
  p = pull
  a = add
  aa = "add --all"
  b = branch
  f = fetch
  rb = rebase
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  dsf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFX; }; f"
  tt = tag --sort v:refname
  ignore = update-index --assume-unchanged 
  unignore = update-index --no-assume-unchanged 
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[credential]
    helper = osxkeychain
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager-core
[core]
  pager = diff-so-fancy | less --tabs=4 -RFX
  excludesfile = /Users/dseripap/.gitignore
  editor = vim
[url "https://"]
  insteadOf = git://
[merge]
  tool = nvimdiff
  prompt = false
[github]
  user = seripap
[gpg]
	program = gpg
[ghi]
  token = !security find-internet-password -a seripap -s github.com -l 'ghi token' -w
[mergetool]
  keepBackup = false
[mergetool "smerge"]
  cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
    trustExitCode = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[credential "https://dev.azure.com"]
	useHttpPath = true
[difftool]
    prompt = true
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
