{
	"coc.preferences.formatOnSaveFiletypes": [
		"javascript",
		"typescript",
		"yaml",
		"javascriptreact",
		"typescriptreact",
		"json",
		"css",
		"graphql",
		"typescript.tsx",
		"markdown"
	],
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod",
				".vim/",
				".git/",
				".hg/"
			],
			"filetypes": [
				"go"
			]
		},
		"graphql": {
			"command": "graphql-lsp",
			"args": [
				"server",
				"-m",
				"stream"
			],
			// customize filetypes to your needs
			"filetypes": [
				"typescript",
				"typescriptreact",
				"graphql"
			]
		}
	}
}
